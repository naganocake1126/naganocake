
<!DOCTYPE html>
<html>
  <head>
   <title>Naganocake</title>
   <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
   <%= csrf_meta_tags %>
   <%= csp_meta_tag %>


    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body>
     <header>
      <nav class="navbar navbar-expand-lg navbar-right" >
        <div class="container">
          <a class="navbar-brand" href="/"><%= image_tag('logo.png') %></a>
           <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
             <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
             </button>
           </nav>
            </div>

           <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
             <ul class="navbar-nav ml-auto">
              
    

            <% if customer_signed_in? %>
            <p class="text-center">ようこそ、<%= current_customer.first_name %>さん!</p>
            
            <li class="nav-item">
              <%= link_to "マイページ", customers_mypage_path, class: 'btn btn-default' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, class: 'btn btn-default' %>
            </li>
            <li class="nav-item">
              <%= link_to "カート", cart_items_path, class: 'btn btn-default' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'btn btn-default' %>
            </li>
            <% elsif admin_signed_in? %>

             <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path, class: 'btn btn-default' %>
             </li>
             <li class="nav-item">
              <%= link_to "会員一覧", admin_customers_path, class: 'btn btn-default' %>
             </li>
             <li class="nav-item">
              <%= link_to "注文履歴一覧", admin_path, class: 'btn btn-default' %>
             </li>
             <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-default' %>
             </li>
            <% else %>
             <li class="nav-item">
              <%= link_to "About", about_path, class: 'btn btn-default' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, class: 'btn btn-default' %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-default' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path, class: 'btn btn-default' %>
            </li>
            </li>
            <% end %>
             </ul>
       </div>
     </nav>
     </header>
     <%= yield %>

      <footer class="bg-dark text-white pt-5 pb-4">
       <div class="container">
          <div class="row">
              <div class="mx-auto">
                  <p class="footer-text">© Naganocake.co.,ltd.All rights Reserved.</p>
              </div>
          </div>
      </div>
     </footer>
  </body>
</html>
