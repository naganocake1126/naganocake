<script src="https://kit.fontawesome.com/08f25f8d84.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="style.css" />
<div class="container">

    <td>商品一覧</td>
    <%=link_to '/admin/items/new',method: :get do %>
    <i class="fa-solid fa-plus"></i>
    <% end %>
 <table class="table">
  <thead class="table-info">

    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
    </tr>
  </thead>
  <tbody>
    <% @item.each do |item| %>
    <tr>
      <td><%= item.id %></td>

      <td><%= link_to item.name, admin_item_path(item) %></td>

      <td><%= item.price %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @item %>

</div>








