<div class="container">
<h5>商品新規登録</h5>

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

<div class="form-group">
  <%= f.label "商品画像" %>
  <%= f.file_field :image, accept: "image/*" %>
</div>

<div class="form-group">
  <%= f.label "商品名"%>
  <%= f.text_field :name%>
</div>

<div class="form-group">
  <%= f.label "商品の説明" %>
  <%= f.text_area :introduction, class: 'form-control' %>
</div>

<div class="form-group">
 <%= f.label "税抜価格" %>
  <%= f.number_field :price%>円
</div>


<div class="actions">
  <%= f.submit "新規登録", class:"btn btn-success ms-3" %>
</div>
<% end %>
</div>