<div class="container">
<h5>会員情報編集</h5>
<%= form_with model: @customer, url:admin_customer_path(@customer.id), method: :patch do |f| %>
   <table>
    <tr>
     <td><%= f.label :id  %></td>
     <td><%=f.text_field :id %></td>
    </tr>

    <tr>
     <td><%= f.label :first_name, "氏名" %></td>
     <td><%=f.text_field :first_name %></td>
     <td><%=f.text_field :last_name %></td>
    </tr>



    <tr>
     <td><%= f.label :first_name_kana, "フリガナ" %> </td>
     <td><%=f.text_field :first_name_kana %> </td>
     <td><%=f.text_field :last_name_kana %> </td>
    </tr>


   <tr>
    <td><%= f.label :postal_code %></td>
    <td><%=f.text_field :postal_code %></td>
   </tr>

   <tr>
    <td><%= f.label :address %></td>
    <td><%=f.text_field :address %></td>
   </tr>

   <tr>
    <td><%= f.label :telephone_number %></td>
    <td><%=f.text_field :telephone_number %></td>
   </tr>

   <tr>
    <td><%= f.label :email %></td>
    <td><%=f.text_field :email %></td>
   </tr>
  </table>



<table>
 <tr>
  <td><input class="btn btn-success" type="submit" value="変更を保存"></td>
 </tr>
</table>
 <% end %>
</div>