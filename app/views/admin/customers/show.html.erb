<div class="container">
<strong><%= @customer.first_name %></strong>さんの<strong>会員詳細</strong>
<table class="table table-borderless">
<tr>
  <td>会員ID</td>
  <td><%= @customer.id %></td>
</tr>
<tr>
  <td>氏名</td>
  <td><%= @customer.first_name+" "+@customer.last_name %></td>
</tr>
<tr>
  <td>フリガナ</td>
  <td><%= @customer.first_name_kana+" "+@customer.last_name_kana %></td>
</tr>
<tr>
  <td>郵便番号</td>
  <td><%= @customer.postal_code %></td>
</tr>
<tr>
  <td>住所</td>
  <td><%= @customer.address %></td>
</tr>
<tr>
  <td>電話番号</td>
  <td><%= @customer.telephone_number %></td>
</tr>
<tr>
  <td>メールアドレス</td>
  <td><%= @customer.email %></td>
</tr>
<tr>
  <td>会員ステータス</td>
　<td><% if @customer.is_deleted ==true %>
        <p class="text-success"><strong>有効</strong></p>
        <% else %>
        <p class="text-muted">退会済み</p>
        <% end %></td>
<tr></tr>
</table>

 <td><%= link_to "編集する", edit_admin_customer_path, :class => "btn btn-success ms-3" %></td>
 
 <td><%= link_to "注文履歴一覧を見る", admin_path, :class => "btn btn-primary ms-3" %></td>

</div>