<div class="container">
<h5>注文履歴詳細</h5>
<table class="table table-borderless">
  <thead>
    <tr>
      <td>購入者</td>
      <td><%= @order.customer.first_name %></td>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td><%= @order.address %></td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method %></td>
    </tr>
  </thead>
</table>

<table class="table">
  <thead class="table-info">
    <tr>
      <th>商品名</td>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @total=0 %>
    <% @order_details.each do |order_details| %>
    <tr>
      <td><%= order_details.item.name %></td>

      <td><%= order_details.with_tax_price %></td>

      <td><%= order_details.amount %></td>

      <td><%= @total+=order_details.amount*order_details.with_tax_price %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-borderless">
  <thead>
  <tr>
   <td>商品合計</td>
   <td><%= @total %></td>
  </tr>
  <tr>
   <td>送料</td>
   <td><%= @sipping_cost %></td>
  </tr>
  <tr>
   <td>請求金額合計</td>
   <td><%= @total+@sipping_cost %></td>
  <tr>
  </thead>
 </table>