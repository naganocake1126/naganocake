
<div class="container">
<div class="row">
<h5><strong>商品一覧</strong></h5>
<%= @items.count %>件
</div>
<div class="row">
<% @items.each do |item| %>
  <div class="col-md-3">
    <div>
      <%= link_to item_path(item.id) do %>
      <%= image_tag item.image, size: "250x200" %>
      <% end %>
      <p><%= item.name %></p>
      <p>¥<%= item.price %></p>
    </div>
  </div>
<% end %>
</div>

<div class='p-top__paginate'><%= paginate @item %></div>

</div>