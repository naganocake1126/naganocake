<div class="container">
<h3>商品一覧</h3>

<% @item.each do |item| %>

  <div class="row">

    <div class="col">
      <p><%= image_tag item.image, size: "400x300" %></p>
      <h6>商品名</h6>
      <p><%= item.name %></p>
      <p>¥<%= item.price %></p>
    </div>
  </div>
  <% end %>
  <%= paginate @item %>
</div>