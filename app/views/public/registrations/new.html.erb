<div class="container">
  
<h6>新規会員登録</h6>


<%= form_with(model: @customer, url: registration_path(resource_name)) do |f| %>

 <div class="form-group row">
  <%= f.label :名前 %>
  <%= f.label :first_name, "（姓）" %><br />
  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  <%= f.label :last_name, "（名）" %><br />
  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
</div>

<div class="form-group row">
 <%= f.label :フリガナ %>
 <%= f.label :first_name_kana, "（セイ）" %><br />
 <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
 <%= f.label :last_name_kana, "（メイ）" %><br />
 <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
</div>

<div class="form-group row">
   <%= f.label :メールアドレス %><br /> 
   <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>
  
<div class="form-group row">
 <%= f.label :郵便番号（ハイフンなし） %><br />
 <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
</div>
  
<div class="form-group row">
 <%= f.label :住所 %><br />
 <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
</div>
  
<div class="form-group row">
 <%= f.label :電話番号（ハイフンなし） %><br />
 <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
</div>
  
<div class="form-group row">
 <%= f.label :password, "パスワード（6文字以上）" %><br />
 <%= f.password_field :password, autocomplete: "new-password" %>
</div>

<div class="form-group row">
 <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
 <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

<div class="actions">
   <button type="submit" class="btn btn-success">新規登録</button>
</div>
  <% end %>

  <h7>既に登録済みの方</h7><br>

  <a href="/customers/sign_in" class="link-primary">こちら</a>
  からログインしてください。

 </div>

