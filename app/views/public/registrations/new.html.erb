<div class="container">

<span class="text-dark bg-light">新規会員登録</span>


<%= form_with(model: @customer, url: customer_registration_path) do |f| %>
<table>
 <div class="form-group row my-3">
  <tr>
   <td><%= f.label :名前 %> <%= f.label :first_name, "（姓）" %></td>
   <div class="col-sm-6">
   <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
   <div class="col-sm-3">
   <td><%= f.label :last_name, "（名）" %> <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
   </div>
   </div>
  </tr>
 </div>


<div class="form-group row my-3">
 <tr>
  <td><%= f.label :フリガナ %><%= f.label :first_name_kana, "（セイ）" %>
  <div class="col-sm-6">
  <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
  <td><%= f.label :last_name_kana, "（メイ）" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
 </tr>
  </div>
</div>

<div class="form-group row my-3">
 <tr>
   <td><%= f.label :メールアドレス %><br />
   <div class="col-sm-6">
   <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
 </tr>
</div>

<div class="form-group row my-3">
 <tr>
  <td><%= f.label :郵便番号（ハイフンなし） %><br /></td>
  <div class="col-sm-6">
  <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
 </tr>
  </div>
</div>

<div class="form-group row my-3">
 <tr>
  <td><%= f.label :住所 %><br /></td>
  <div class="col-sm-6">
  <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
 </tr>
  </div>
</div>

<div class="form-group row my-3">
 <tr>
  <td><%= f.label :電話番号（ハイフンなし） %><br /></td>
  <div class="col-sm-6">
  <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
 </tr>
  </div>
</div>

<div class="form-group row my-3">
 <tr>
  <td><%= f.label :password, "パスワード（6文字以上）" %><br /></td>
  <div class="col-sm-6">
  <td><%= f.password_field :password, autocomplete: "new-password" %></td>
 </tr>
  </div>
</div>

<div class="form-group row my-3">
 <tr>
  <td><%= f.label :password_confirmation, "パスワード（確認用）" %><br /></td>
  <div class="col-sm-6">
  <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
 </tr>
  </div>
</div>
</table>

<div class="actions">
   <button type="submit" class="btn btn-success">新規登録</button>
</div>
  <% end %>



  <h7>既に登録済みの方</h7><br>

  <a href="/customers/sign_in" class="link-primary">こちら</a>
  からログインしてください。

 </div>

