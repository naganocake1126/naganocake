<div class="container">
  <table>
    <tr>
    <td><h6>ショッピングカート</h6></td>
    <td><%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete,class: "btn btn-danger btn-sm" %></td>
    </tr>
  </table>



  <table class="table table-bordered">
    <thead class="table-light">
     <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
     </tr>
    </thead>

    <% if @cart_items.present? %>
     <% @cart_items.each do |cart_item| %>
      <tr>
       <td>
        <%= image_tag(cart_item.item.image, size: "60x50") %>
        <%= cart_item.item.name %>
       </td>
       <td>
        <%= cart_item.item.with_tax_price %>
       </td>
       <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
          <%= f.number_field :amount, min: 1, max:10, id: "quantity_cart"%>
          <%= f.submit "変更",class: "btn btn-success" %>
        <% end %>
       </td>
       <td>
        <%= cart_item.subtotal %>
       </td>
   

     <% @total_price += cart_item.subtotal %>

      <td>
       <%= link_to "削除する", cart_item_path(cart_item.id, cart_item), method: :delete,class: "btn btn-danger" %>
      </td>
     <% end %>
    <% end %>
      </tr>
   
  </table>
   <table>
    <tr>
      <td>
       <%= link_to "買い物を続ける", items_path,class: "btn btn-primary" %>
      </td>
     <th>合計金額</th>
      <td><%= @total_price %></td>
    </tr>
   </table>
    
     <%= link_to "情報入力に進む", new_order_path,class: "btn btn-success" %>
     
</div>