<div class="containar">
<h5>注文履歴一覧</h5>

<table class="table table-bordered">
  <thead>
   <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>注文詳細</th>
   </tr>
  </thead>

  <tbody>
   <% @orders.each do |order| %>
    <tr>
     <td><%= order.created_at %></td>
     <td><%= order.address %></td>
     <td><%= order.name %></td>
     <td><%= order.total_payment %></td>
     <td><%= link_to "表示する", orders_path, :class => "btn btn-primary ms-3" %></td>
    </tr>
   <% end %>
 </table>
 </div>