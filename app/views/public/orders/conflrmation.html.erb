<div class="container">
  <h2>注文情報確認</h2>
<div class="row">
  <div class="col-md-7">
   <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">商品名</th>
        <th scope="col">単価（税込）</th>
        <th scope="col">数量</th>
        <th scope="col">小計</th>
      </tr>
    </thead>

        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <th scope="row"><%= image_tag cart_item.item.get_image(100,100) %><%= cart_item.item.name %></th>
            <td><%= cart_item.item.price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
      <div class="col-md-5">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td>送料</td>
              <td><%= 800 %></td>
            </tr>
            <tr>
              <td>商品合計</td>
              <td><%= @total %></td>
            </tr>
            <tr>
              <td>請求合計</td>
              <td><%= @total_all %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
</div>
<td><%="支払方法"+ @order.payment_method_i18n%><br></td>
<td><%="お届け先"+ @order.postal_code+" "+@order.address+" "+@order.name%></td>
<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
<%= f.hidden_field :customer_id, :value => current_customer.id %>
<%= f.hidden_field :postal_code %>
<%= f.hidden_field :address %>
<%= f.hidden_field :name %>
<%= f.hidden_field :shipping_cost, :value => 800 %>
<%= f.hidden_field :total_payment, :value => @total_all %>
<%= f.hidden_field :payment_method %>
<div class="d-grid gap-2 col-6 mx-auto">
<%= f.submit "注文を確定する", class:"btn btn-success col-md-3" %>
</div>
<% end %>
</div>