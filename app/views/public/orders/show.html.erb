<h5>注文履歴詳細</h5>
<% @orders.each do |order| %>
<h8>注文情報</h8>
<table>
  <tr>
    <td>注文日</td>
    <td><%= order.created_at %></td>
  </tr>
  <tr>
    <td>配送日</td>
    <td></td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= order.payment_method %></td>
  </tr>
</table>
<% end %>

<h8>請求情報</h8>
<% @cart_items.each do |cart_item| %>
<table>
  <tr>
    <td>商品合計</td>
    <td><%= @total %></td>
    <td>配送料</td>
    <td><%= 800 %></td>
    <td>ご請求額</td>
    <td><%= @total_all %></td>
  </tr>
</table>

<h8>ご注文内容</h8>
<table>
  <tr>
    <th>商品</th>
     <td><%= cart_item.item.name %></td>
    <th>単価(税込)</th>
     <td><%= cart_item.item.price %></td>
    <th>個数</th>
     <td><%= cart_item.amount %></td>
    <th>小計</th>
     <td><%= cart_item.subtotal %></td>
  </tr>
<% end %>
