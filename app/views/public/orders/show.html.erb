<div class ="container">
<h5>注文履歴詳細</h5>
<div class="row">
  <div class="col-md-6">
<h8><strong>注文情報</strong></h8>
<table class="table table-bordered">
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td><%= @order.address %></td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method %></td>
  </tr>
</table>
  </div>


<div class="col-md-6">
<h8><strong>請求情報</strong></h8>
<table class="table table-bordered">
  <tr>
    <td>商品合計</td>
    <td><%= @total %></td>
  </tr>
  <tr>
    <td>配送料</td>
    <td><%= @order.shipping_cost %></td>
  </tr>
  <tr>
    <td>ご請求額</td>
    <td><%= @order.total_payment %></td>
  </tr>
</table>
</div>
</div>

<h8><strong>ご注文内容</strong></h8>
 <table class="table table-bordered">
  <tr>
    <th>商品</th>
    <th>単価(税込)</th>
    <th>個数</th>
    <th>小計</th>
  </tr>
  <tbody>
  <% @total=0 %>
  <% @order.order_details.each do |order_detail| %>
  <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.with_tax_price %></td>
    <td><%= order_detail.amount %></td>
    <td><%= @total+=order_detail.amount*order_detail.with_tax_price %></td>
  </tr>
  <% end %>
  </tbody>
 </table>


</div>
